<mvc:View controllerName="logaligroup.SAPUI5.controller.App"
    xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Button text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
    <Input value="{/recipient/name/}"
        description="{parts:['i18n>helloMsg','/recipient/name/'],formatter: 'jQuery.sap.formatMessage'}"
        width="60%"
        valueLiveUpdate="true"
        >
    </Input>
</mvc:View>